@using Microsoft.Extensions.Localization
@using Blogifier.Shared.Resources
@using Blogifier.Shared
@inject IStringLocalizer<Resource> _localizer

@{
    var listModel = (ListModel)Model;
}

@if (listModel.Posts.Count() > 0)
{
    <div class="row">
        <div id="post-container" class="col-lg-12">
            <partial name="post-list-items.cshtml" />
        </div>
    </div>
}
else
{
    <div class="h1 text-capitalize">@_localizer["empty"]!</div>
}

<script src="/themes/standard/js/post.js" type="text/javascript"></script>
